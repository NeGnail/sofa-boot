<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:sofa="http://sofastack.io/schema/sofaboot"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://sofastack.io/schema/sofaboot http://sofastack.io/schema/sofaboot.xsd"
       default-autowire="byName">


<bean id="sampleService" class="com.alipay.sofa.boot.examples.demo.service.SampleServiceImpl"/>

    <bean id = "publishService" class="com.alipay.sofa.boot.examples.demo.service.PublishServiceImpl" init-method="publish"/>

    <bean id = "ReferenceService" class="com.alipay.sofa.boot.examples.demo.service.ReferenceServiceImpl" init-method="reference" depends-on="publishService"/>

    <bean id="liangenServiceImpl" class="com.alipay.sofa.boot.examples.demo.isolation.rpc.LiangenServiceImpl"/>
    <sofa:service ref="liangenServiceImpl" interface="com.alipay.sofa.boot.examples.demo.isolation.rpc.LiangenService">
        <sofa:binding.bolt/>
    </sofa:service>


    <sofa:reference id="liangenServiceReference" interface="com.alipay.sofa.boot.examples.demo.isolation.rpc.LiangenService">
        <sofa:binding.bolt/>
    </sofa:reference>
</beans>