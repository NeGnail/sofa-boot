<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:sofa="http://sofastack.io/schema/sofaboot"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://sofastack.io/schema/sofaboot   http://sofastack.io/schema/sofaboot.xsd"
       default-autowire="byName">

    <bean id="personImpl" class="com.alipay.sofa.boot.examples.demo.rpc.bean.PersonImpl"/>

    <sofa:service ref="personImpl" interface="com.alipay.sofa.boot.examples.demo.rpc.bean.Person">
        <sofa:binding.bolt/>
        <sofa:binding.rest/>
        <sofa:binding.dubbo/>
    </sofa:service>



    <sofa:reference id="personBolt" interface="com.alipay.sofa.boot.examples.demo.rpc.bean.Person">
        <sofa:binding.bolt>
            <sofa:global-attrs filter="personFilter"/>
        </sofa:binding.bolt>
    </sofa:reference>

    <sofa:reference id="personRest" interface="com.alipay.sofa.boot.examples.demo.rpc.bean.Person">
        <sofa:binding.rest/>
    </sofa:reference>

    <sofa:reference id="personDubbo" interface="com.alipay.sofa.boot.examples.demo.rpc.bean.Person">
        <sofa:binding.dubbo/>
    </sofa:reference>

    <bean id="personFilter" class="com.alipay.sofa.boot.examples.demo.rpc.bean.PersonFilter"/>






</beans>